defaults.pcm.rate_converter "speexrate_best"

ctl.equal {
    type equal;
}

pcm.equal {
    type equal;
    slave.pcm "plug:dmix";
}

pcm.usb
{
    type hw
    card NTUSB
}

pcm.!default
{
    type asym
    playback.pcm
    {
        type plug
        slave.pcm "equal"
    }
    capture.pcm
    {
        type plug
        slave.pcm "usb"
    }
}
